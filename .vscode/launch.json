{
    "version": "0.2.0",
    "configurations": [                        
        {
            "name": "AuthApi",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildAuthApi",
            "program": "${workspaceFolder}/backend/AuthApi/AuthApi/bin/Debug/net5.0/AuthApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/backend/AuthApi/AuthApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Frontend",
            "type": "dart",
            "request": "launch",
            "args": ["--web-port", "8000"],
            "program": "frontend/lib/main.dart"
        },        
    ],
    "compounds": [
        {
            "name": "All",
            "configurations": ["AuthApi", "Frontend"]
        }
    ]
}